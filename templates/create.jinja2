{% extends 'base.jinja2' %}

{% block subtitle %}Create Donations{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<span class="error">{{ error }}<br>{% endif %}
    <label for="name-input">Name: </label><input id="name-input" type="text" name="name">
    <label for="amount-input">Amount:</label><input id="amount-input" type="number" name="amount">
    <input type="submit" value="Create Donation">
</form>
{% endblock content %}
